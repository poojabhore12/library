<br><br>
<div class="container">   
  <%= form_for @book, url: {action: :create} do |f| %>   
      <div>   
        <h3>Add a Book</h3>   
      </div>   
      <div>   
        <p>   
          <%= "<div>#{@book.errors.full_messages.first}</div>".html_safe if @book.errors.any? %>    

        
        <div class="field">   
            <label>Book Name</label>   
              <%= f.text_field :book_name %>   
        </div> 

        <br>  
  
        <div class="field">   
           <label>Description</label>   
              <%= f.text_field :desc %>   
        </div>   
         </p>   
      </div>   
      <div class="field">   
        <%= link_to 'Back', { controller: 'books', action: 'index'} %>   
        <%= f.submit 'Create Book' %>   
      </div>   
  <% end %>   
</div>  
