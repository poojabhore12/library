<%if (user.id == Current.user.id) || Current.user.role %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= user.name %>
</p>
<p>
<p>
  <strong>Email:</strong>
  <%= user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= user.role %>
</p>

<br/><br>
<%= link_to 'Back', users_path, :class => "btn btn-warning", :style => "color: #ffffff" %>
<%else%>
<blockquote>
  <p class="text-danger">You are not authorized to view this page!</p>
</blockquote>
<% end %>